<%= form_with model: @product, url: product_path(@product), method: :patch, data: { turbo_frame: "product_#{@product.id}" } do |f| %>
  <div class="mb-4">
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>
  
  <div class="mb-4">
    <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <div class="mb-4">
    <%= f.label :quantity, class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :quantity, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <div>
    <%= f.submit "Update Product", class: "bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700" %>
  </div>
<% end %>